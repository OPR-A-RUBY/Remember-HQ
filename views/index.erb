    <h4>My Persons:</h4>
    <table class="table table-bordered" > 
      <thead class="table-primary">                       
        <tr>                                                  
          <th class="p-2 text-center table-primary" >ID</th>
          <th class="p-2 text-center" >Photo</th>
          <th class="p-2 text-center" >Name</th>
          <th class="p-2 text-center" >By born</th>
          <th class="p-2 text-center" >By dead</th>
          <th class="p-2 text-center" >Discription</th>        
        </tr>
      </thead>                            
      <tbody> <% @persons.each do |item| %> 
        <tr>                          
          <td class="p-2" align="center"> <%= item['id']%> </td>
          <td class="p-2" align="left"> 
          	<img src="/<%= item['photo_link']%>" class="img-thumbnail" alt="/<%= item['photo_link']%>">
          </td>
          <td class="p-2" align="left"><a href="/person/<%=item['id']%>"><%= item['name']%></a></td>
          <td class="p-2" align="center"> <%= item['b_date']%> </td>
          <td class="p-2" align="center"> <%= item['d_date']%> </td>
          <td class="p-2" align="left">   <%= item['discription']%> </td>
        </tr>
      </tbody><% end %>
    </table>
